@model List<CrudOpration.Models.User>

<div style="background-color: rebeccapurple; color: white; padding: 10px; display: flex; justify-content: space-between">
    <p style="margin: 0;">User Details</p>
    <a asp-controller="Home" asp-action="addUser" class="btn btn-light" style="margin-left: auto;">Add New+</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered" id="dataTableData">
    <thead>
        <tr>
            <td>Action</td>
            <th>Id</th>
            <th>Login User ID</th>
            <th>User Name</th>
            <th>Address</th>
            <th>Contact Number</th>
            <th>Mobile Number</th>
            <th>Email ID</th>
            <th>OTP Verify</th>
            <th>Tab</th>
            <th>User Layer</th>
            <th>Remark</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                    <td>
                        <a href="@Url.Action("Edit", "Home", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Home", new {id = user.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                <td>@user.Id</td>
                <td>@user.LoginUserId</td>
                <td>@user.UserName</td>
                <td>@user.Address</td>
                <td>@user.ContactNumber</td>
                <td>@user.MobileNumber</td>
                <td>@user.EmailId</td>
                <td>@(user.OTPVerify ? "YES" : "NA")</td>
                <td>@(user.Tab ? "YES" : "NA")</td>
                <td>@user.UserLayer</td>
                <td>@user.Remark</td>
              @*   <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled @(user.IsActive ? "checked" : "") />
                    </div>
                </td> *@
                <td>@(user.IsActive ? "YES" : "NA")</td>
            </tr>
        }
    </tbody>
</table>
</div>


